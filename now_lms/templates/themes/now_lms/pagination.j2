{% macro paginate(consulta=None, vista=None, id=None, parametros=None) %}
<p>
    {{ consulta.total }} items encontrados.
    <br />
    {% if consulta.has_prev %}{% if id %}
    <a href="{{ url_for(vista,id=id, page=consulta.prev_num) }}" class="link-dark"
        ><i class="bi bi-arrow-left-short" aria-hidden="true"></i>Anterior</a
    >
    {% else %}
    <a href="{{ url_for(vista, page=consulta.prev_num) }}" class="link-dark"
        ><i class="bi bi-arrow-left-short" aria-hidden="true"></i>Anterior</a
    >
    {% endif %}{% endif %} PÃ¡gina {{ consulta.page }} de {{ consulta.pages }} {% if consulta.has_next %}{% if id %}
