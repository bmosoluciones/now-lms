<!doctype html>
{% set config = config() %} {% set current_theme = current_theme() %}
<html lang="{{ current_locale() }}" class="h-100">
    <head>
        {{ current_theme.headertags() }}
        <title>{{ config.titulo_html or "NOW - Learning Management System" }}</title>

        {{ current_theme.local_style() }}
    </head>

    <body class="finance-theme">
        {{ current_theme.navbar() }}

        <main>
            {{ current_theme.notify() }}

            <!-- Hero Section - Finance Style -->
            <section class="finance-hero">
                <!-- Placeholder for background image - to be added later -->
                <div class="finance-hero-overlay"></div>
                <div class="container">
                    <div class="row align-items-center min-vh-50">
                        <div class="col-12 col-lg-7">
                            <div class="finance-hero-content">
                                <h1 class="finance-hero-title">{{ _('Bienvenido a') }} {{ config.titulo }}</h1>
                                <p>
                                    <span class="finance-hero-subtitle">{{ _('TRANSFORMA TU FUTURO FINANCIERO') }}</span>
                                </p>
                                <p class="finance-hero-description">
                                    {% if config.hero and config.hero != "" %} {{ config.hero }} {% else %} {{ _('Aprende a
                                    gestionar tus finanzas personales, invertir inteligentemente y alcanzar la libertad
                                    financiera con nuestros cursos especializados.') }} {% endif %}
                                </p>
                                <div class="finance-hero-actions">
                                    {% if not current_user.is_authenticated %}
                                    <a
                                        href="{{ url_for('course.lista_cursos', page=1) }}"
                                        class="btn finance-btn-primary finance-btn-lg"
                                    >
                                        {{ _('EXPLORAR CURSOS') }}
                                    </a>
                                    <a
                                        href="{{ url_for('user.crear_cuenta') }}"
                                        class="btn finance-btn-outline finance-btn-lg ms-3"
                                    >
                                        {{ _('REGISTRARSE GRATIS') }}
                                    </a>
                                    {% else %}
                                    <a href="{{ url_for('home.panel') }}" class="btn finance-btn-primary finance-btn-lg">
                                        {{ _('MI PANEL') }}
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5">
                            <div class="finance-hero-visual">
                                <div class="finance-visual-container">
                                    <!-- Large Finance logo -->
                                    <div class="finance-big-logo">
                                        <span class="finance-logo-symbol">‚Ç±</span>
                                    </div>
                                    <!-- Floating Finance elements -->
                                    <div class="finance-floating-elements">
                                        <div class="finance-element finance-chart">üìä</div>
                                        <div class="finance-element finance-money">üí∞</div>
                                        <div class="finance-element finance-growth">üìà</div>
                                        <div class="finance-element finance-coins">üíµ</div>
                                        <div class="finance-element finance-bank">üè¶</div>
                                        <div class="finance-element finance-invest">üíº</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Features Section -->
            {% if config.enable_feature_section %} {% if config.custom_feature_section and config.custom_feature_section != ""
            %} {{ config.custom_feature_section | safe }} {% endif %} {% endif %}

            <!-- Featured Courses Section - Finance Themed -->
            {% if cursos and cursos.total > 0 %}
            <section class="finance-courses-section">
                <div class="container">
                    <div class="finance-section-header">
                        <h2 class="finance-section-title">üíº {{ _('CURSOS DESTACADOS') }}</h2>
                        <p class="lead text-center mb-5">
                            {{ _('Descubre nuestros cursos m√°s populares en finanzas personales e inversi√≥n') }}
                        </p>
                    </div>

                    <!-- Courses Grid -->
                    <div class="row g-4">
                        {% for curso in cursos.items[:6] %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card finance-course-card h-100">
                                <!-- Course Image -->
                                {% if curso.imagen_link %}
                                <img
                                    src="{{ curso.imagen_link }}"
                                    alt="{{ curso.nombre }}"
                                    class="card-img-top"
                                    style="height: 200px; object-fit: cover; border-radius: 10px 10px 0 0"
                                />
                                {% else %}
                                <div
                                    class="card-img-top d-flex align-items-center justify-content-center text-white"
                                    style="
                                        height: 200px;
                                        background: linear-gradient(
                                            135deg,
                                            var(--finance-primary) 0%,
                                            var(--finance-secondary) 100%
                                        );
                                        border-radius: 10px 10px 0 0;
                                    "
                                >
                                    <div class="text-center">
                                        {% set course_name_lower = curso.nombre|lower %} {% if 'inversion' in course_name_lower
                                        or 'invertir' in course_name_lower %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üíº</div>
                                        {% elif 'ahorro' in course_name_lower or 'presupuesto' in course_name_lower %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üí∞</div>
                                        {% elif 'trading' in course_name_lower or 'bolsa' in course_name_lower %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üìà</div>
                                        {% elif 'credito' in course_name_lower or 'deuda' in course_name_lower %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üí≥</div>
                                        {% elif 'plan' in course_name_lower or 'retiro' in course_name_lower %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üè¶</div>
                                        {% else %}
                                        <div style="font-size: 3rem; margin-bottom: 0.5rem">üìä</div>
                                        {% endif %}
                                    </div>
                                </div>
                                {% endif %}

                                <!-- Course Content -->
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0" style="color: var(--finance-primary); font-weight: 600">
                                            {{ curso.nombre }}
                                        </h5>
                                        <div class="d-flex align-items-center gap-2">
                                            {% if not curso.precio %}
                                            <span class="badge" style="background: var(--finance-secondary); color: white"
                                                >{{ _('Gratis') }}</span
                                            >
                                            {% endif %} {% if curso.nivel == 0 %}
                                            <span
                                                class="badge bg-light text-dark border"
                                                title="{{ _('Nivel Introductorio') }}"
                                                >{{ _('Introductorio') }}</span
                                            >
                                            {% elif curso.nivel == 1 %}
                                            <span
                                                class="badge"
                                                style="background: var(--finance-secondary)"
                                                title="{{ _('Nivel Principiante') }}"
                                                >{{ _('Principiante') }}</span
                                            >
                                            {% elif curso.nivel == 2 %}
                                            <span
                                                class="badge"
                                                style="background: var(--finance-primary)"
                                                title="{{ _('Nivel Intermedio') }}"
                                                >{{ _('Intermedio') }}</span
                                            >
                                            {% elif curso.nivel == 3 %}
                                            <span
                                                class="badge"
                                                style="background: var(--finance-primary-dark)"
                                                title="{{ _('Nivel Avanzado') }}"
                                                >{{ _('Avanzado') }}</span
                                            >
                                            {% endif %}
                                        </div>
                                    </div>
                                    <p class="card-text flex-grow-1" style="color: #6c757d">
                                        {{ curso.descripcion_corta | truncate(100) }}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a
                                            href="{{ url_for('course.curso', course_code=curso.codigo) }}"
                                            class="btn btn-sm"
                                            style="background: var(--finance-primary); color: white; border: none"
                                        >
                                            üíº {{ _('Acceder al Curso') }}
                                        </a>
                                        <div class="text-end">
                                            {% if curso.duracion %}
                                            <small class="text-muted d-block"
                                                >‚è±Ô∏è {{ curso.duracion }} {{ _('minutos') }}</small
                                            >
                                            {% endif %} {% if curso.precio %}
                                            <small class="fw-bold" style="color: var(--finance-primary)">
                                                {{ curso.precio | float }} {{ config.moneda }}
                                            </small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <!-- Show more courses -->
                    <div class="text-center mt-5">
                        <a
                            href="{{ url_for('course.lista_cursos', page=1) }}"
                            class="btn btn-lg px-5 py-3"
                            style="background: var(--finance-primary); color: white; border: none; border-radius: 10px"
                        >
                            üìö {{ _('Cat√°logo Completo') }}
                        </a>
                    </div>
                </div>
            </section>
            {% else %}
            <!-- No courses available -->
            <section class="finance-no-courses">
                <div class="container">
                    <div class="text-center py-5">
                        <div class="finance-icon-bg finance-icon-empty mb-4">
                            <i class="bi bi-journal-x"></i>
                        </div>
                        <h3>{{ _('No hay cursos disponibles') }}</h3>
                        <p class="text-muted">{{ _('Los cursos estar√°n disponibles pronto.') }}</p>
                        {% if current_user.is_authenticated and current_user.roles %}
                        <a href="{{ url_for('nuevo_curso') }}" class="btn finance-btn-primary"> {{ _('Crear Curso') }} </a>
                        {% endif %}
                    </div>
                </div>
            </section>
            {% endif %}

            <!-- Call to Action Section -->
            <section class="finance-cta-section">
                <div class="container">
                    <div class="finance-cta-content">
                        <div class="row justify-content-center text-center">
                            <div class="col-lg-8">
                                {% if not current_user.is_authenticated %}
                                <h3 class="finance-cta-title">{{ _('¬øListo para Transformar tus Finanzas?') }}</h3>
                                <p class="finance-cta-description">
                                    {{ _('√önete a miles de estudiantes que ya han transformado su situaci√≥n financiera con
                                    nuestros cursos.') }}
                                </p>
                                <div class="finance-cta-actions">
                                    <a
                                        href="{{ url_for('user.crear_cuenta') }}"
                                        class="btn finance-btn-primary finance-btn-lg me-3"
                                    >
                                        {{ _('Registrarse Gratis') }}
                                    </a>
                                    <a
                                        href="{{ url_for('course.lista_cursos', page=1) }}"
                                        class="btn finance-btn-outline finance-btn-lg"
                                    >
                                        {{ _('Explorar Cursos') }}
                                    </a>
                                </div>
                                {% else %}
                                <h3 class="finance-cta-title">{{ _('Bienvenido de vuelta') }}, {{ current_user.nombre }}</h3>
                                <p class="finance-cta-description">
                                    {{ _('Contin√∫a tu camino hacia la libertad financiera con nuestros cursos.') }}
                                </p>
                                <div class="finance-cta-actions">
                                    <a href="{{ url_for('home.panel') }}" class="btn finance-btn-primary finance-btn-lg me-3">
                                        {{ _('Mi Panel') }}
                                    </a>
                                    <a
                                        href="{{ url_for('course.lista_cursos', page=1) }}"
                                        class="btn finance-btn-outline finance-btn-lg"
                                    >
                                        {{ _('Explorar Cursos') }}
                                    </a>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        {{ current_theme.jslibs() }}
    </body>
</html>
