{% macro local_style() -%}
<style>
    /* Rose Pink Theme Custom Variables */
    :root {
        --rose-primary: #e91e63;
        --rose-secondary: #ff6b9d;
        --rose-accent: #c2185b;
        --rose-light: #fce4ec;
        --rose-dark: #880e4f;
        --rose-success: #4caf50;
        --rose-warning: #ff9800;
        --rose-danger: #f44336;
    }

    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }

    /* Rose Pink Theme Styles */
    body {
        background: linear-gradient(135deg, #fef7f5 0%, #fce4ec 100%);
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Custom Navbar Styling */
    .navbar-rose {
        background: linear-gradient(90deg, var(--rose-primary) 0%, var(--rose-secondary) 100%) !important;
        box-shadow: 0 4px 6px rgba(233, 30, 99, 0.1);
        border-bottom: 3px solid var(--rose-accent);
    }

    .navbar-rose .navbar-brand,
    .navbar-rose .nav-link {
        color: white !important;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .navbar-rose .nav-link:hover {
        color: var(--rose-light) !important;
        transform: translateY(-1px);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .navbar-rose .navbar-toggler {
        border-color: rgba(255, 255, 255, 0.3);
    }

    /* Rose Pink Buttons */
    .btn-rose-primary {
        background: linear-gradient(45deg, var(--rose-primary), var(--rose-secondary));
        border: none;
        color: white;
        font-weight: 500;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(233, 30, 99, 0.2);
    }

    .btn-rose-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(233, 30, 99, 0.3);
        background: linear-gradient(45deg, var(--rose-secondary), var(--rose-primary));
        color: white;
    }

    .btn-rose-secondary {
        background: linear-gradient(45deg, var(--rose-accent), var(--rose-dark));
        border: none;
        color: white;
        font-weight: 500;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(194, 24, 91, 0.2);
    }

    .btn-rose-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(194, 24, 91, 0.3);
        background: linear-gradient(45deg, var(--rose-dark), var(--rose-accent));
        color: white;
    }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(233, 30, 99, 0.1);
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(233, 30, 99, 0.15);
    }

    .card-header {
        background: linear-gradient(45deg, var(--rose-light), rgba(255, 255, 255, 0.8));
        border-bottom: 2px solid var(--rose-primary);
        border-radius: 15px 15px 0 0 !important;
        font-weight: 600;
        color: var(--rose-dark);
    }

    /* Icon Styling */
    .bi {
        filter: drop-shadow(0 1px 2px rgba(233, 30, 99, 0.3));
        transition: all 0.2s ease;
    }

    .navbar-rose .bi {
        filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
    }

    /* Dropdown Styling */
    .dropdown-menu {
        border: none;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(233, 30, 99, 0.2);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .dropdown-item {
        border-radius: 8px;
        margin: 2px 8px;
        transition: all 0.2s ease;
    }

    .dropdown-item:hover {
        background: var(--rose-light);
        color: var(--rose-dark);
        transform: translateX(4px);
    }

    /* Alert Styling */
    .alert {
        border: none;
        border-radius: 10px;
        border-left: 4px solid var(--rose-primary);
        background: rgba(252, 228, 236, 0.8);
        backdrop-filter: blur(5px);
    }

    /* Form Elements */
    .form-control {
        border: 2px solid var(--rose-light);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--rose-primary);
        box-shadow: 0 0 0 0.2rem rgba(233, 30, 99, 0.25);
    }

    /* Modal Styling */
    .modal-content {
        border: none;
        border-radius: 15px;
        box-shadow: 0 16px 32px rgba(233, 30, 99, 0.2);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
    }

    .modal-header {
        border-bottom: 2px solid var(--rose-light);
        background: linear-gradient(45deg, var(--rose-light), rgba(255, 255, 255, 0.8));
        border-radius: 15px 15px 0 0;
    }

    .modal-title {
        color: var(--rose-dark);
        font-weight: 600;
    }

    /* Responsive Design Enhancements */
    @media (max-width: 768px) {
        .navbar-rose {
            background: var(--rose-primary) !important;
        }

        .btn-rose-primary,
        .btn-rose-secondary {
            border-radius: 20px;
            padding: 8px 16px;
        }
    }

    /* Animation for page elements */
    .card,
    .btn,
    .alert {
        animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endmacro %}
