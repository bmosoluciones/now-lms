{% macro navbar() -%}

<nav class="navbar navbar-expand-md navbar-ocean" aria-label="Ocean Academic Navigation">
    <div class="container-fluid">
        <a href="{{ url_for('home.pagina_de_inicio') }}" class="navbar-brand text-decoration-none">
            {% if logo_perzonalizado() %}
            <img
                height="30"
                src="{{ url_for('static', filename='/files/public/images/logotipo.jpg') }}"
                alt="Ocean LMS"
                class="d-inline-block align-top me-2"
            />
            {% else %}
            <img
                height="30"
                src="{{ url_for('static', filename='/icons/logo/logo_white_large.png') }}"
                alt="NOW LMS"
                class="d-inline-block align-top me-2"
            />
            {% endif %}
        </a>
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarsOcean"
            aria-controls="navbarsOcean"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsOcean">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                {% if not current_user.is_authenticated %}
                <li class="nav-item">
                    <a href="{{ url_for('home.pagina_de_inicio') }}" class="nav-link">Inicio</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a href="{{ url_for('home.panel') }}" class="nav-link">Inicio</a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ url_for('course.lista_cursos', page=1) }}" class="nav-link">Cursos</a>
                </li>
                {% if is_programs_enabled() %}
                <li class="nav-item">
                    <a href="{{ url_for('program.lista_programas', page=1) }}" class="nav-link">Programas</a>
                </li>
                {% endif %} {% if is_resources_enabled() %}
                <li class="nav-item">
                    <a href="{{ url_for('resource.lista_de_recursos', page=1) }}" class="nav-link">Recursos</a>
                </li>
                {% endif %} {% if is_masterclass_enabled() %}
                <li class="nav-item">
                    <a href="{{ url_for('masterclass.list_public') }}" class="nav-link">Clases Magistrales</a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ url_for('blog.blog_index') }}" class="nav-link">Blog</a>
                </li>
                {% if current_user.is_authenticated %} {% if current_user.tipo == "moderator" or current_user.tipo ==
                "instructor" or current_user.tipo == "admin" %}
                <li class="nav-item">
                    <a href="{{ url_for('moderator_profile.pagina_moderador') }}" class="nav-link">Moderación</a>
                </li>
                {% endif %} {% if current_user.tipo == "instructor" or current_user.tipo == "admin" %}
                <li class="nav-item">
                    <a href="{{ url_for('instructor_profile.pagina_instructor') }}" class="nav-link">Docente</a>
                </li>
                {% endif %} {% if current_user.tipo == "admin" %}
                <li class="nav-item">
                    <a href="{{ url_for('admin_profile.pagina_admin') }}" class="nav-link">Administración</a>
                </li>
                {% endif %} {% endif %}
            </ul>
            <div class="text-end">
                {% if not current_user.is_authenticated %}
                <a class="btn btn-ocean-primary me-2" href="{{ url_for('user.inicio_sesion') }}" role="button"
                    >Iniciar Sesión</a
                >
                <a class="btn btn-ocean-secondary me-2" href="{{ url_for('user.crear_cuenta') }}" role="button"
                    >Crear Cuenta</a
                >
                {% else %}
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a
                            class="nav-link dropdown-toggle text-decoration-none"
                            href="#"
                            role="button"
                            data-bs-toggle="dropdown"
                            data-bs-display="static"
                            aria-expanded="false"
                            >Bienvenido: {{ current_user.nombre }} {{ current_user.apellido }}</a
                        >
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            <li>
                                <a class="dropdown-item" href="{{ url_for('user_profile.perfil') }}"> Perfil de Usuario</a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a
                                    class="dropdown-item text-decoration-none"
                                    href="#"
                                    data-bs-toggle="modal"
                                    data-bs-target="#oceanModal"
                                    >Información</a
                                >
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-decoration-none" href="{{ url_for('user.cerrar_sesion') }}">
                                    Cerrar Sesión</a
                                >
                            </li>
                        </ul>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

{% if current_user.is_authenticated %}
<div class="modal fade" id="oceanModal" tabindex="-1" aria-labelledby="oceanModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="oceanModalLabel">Ocean Academic LMS</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="ocean-depth">
                    <h3 style="color: var(--ocean-primary); font-family: &quot;Merriweather&quot;, serif">Ocean Depth</h3>
                    <p class="mb-0">Deep Learning Through Digital Innovation</p>
                </div>
                <strong>Versión:</strong> {{ version }}
                <br />
                {% if current_user.tipo == "admin" %}
                <strong>Python:</strong> {{ pyversion }}
                <br />
                <strong>Database:</strong> {{ info["DBENGINE"] }}
                <br />
                <strong>Cache:</strong> {{ info["CACHE"] }} {% endif %}
            </div>
            <div class="modal-footer">
                <div class="d-flex justify-content-between w-100">
                    <div>
                        <img
                            width="75"
                            height="20"
                            src="{{ url_for('static', filename='/img/bmo-logo.png') }}"
                            alt="BMO Soluciones"
                        />
                    </div>
                    <div>
                        <a
                            href="https://now-lms-manual.readthedocs.io/en/latest/"
                            class="btn btn-ocean-secondary btn-sm"
                            data-dismiss="modal"
                            >Manual de Usuario</a
                        >
                        {% if current_user.tipo == "admin" %}
                        <a
                            href="https://bmosoluciones.github.io/now-lms/"
                            class="btn btn-ocean-secondary btn-sm"
                            data-dismiss="modal"
                            >Manual de Administración</a
                        >
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %} {% endmacro %}
