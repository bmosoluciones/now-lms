{% macro navbar() -%}
<nav class="navbar navbar-expand-lg excel-navbar sticky-top">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand excel-brand" href="/">
            <div class="d-flex align-items-center">
                <div class="excel-logo me-2">
                    <span class="excel-icon">X</span>
                </div>
                <span class="excel-brand-text">{{ _('MAESTRO DOS LÍNEA') }}</span>
            </div>
        </a>

        <!-- Mobile toggle button -->
        <button
            class="navbar-toggler excel-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarExcel"
            aria-controls="navbarExcel"
            aria-expanded="false"
            aria-label="{{ _('Alternar navegación') }}"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation -->
        <div class="collapse navbar-collapse" id="navbarExcel">
            <!-- Main navigation tabs -->
            <ul class="navbar-nav excel-nav-tabs me-auto">
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="/"> <i class="bi bi-house-fill me-1"></i>{{ _('Inicio') }} </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="{{ url_for('course.lista_cursos', page=1) }}">
                        <i class="bi bi-journal-bookmark-fill me-1"></i>{{ _('Cursos') }}
                    </a>
                </li>
                {% if is_programs_enabled() %}
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="{{ url_for('program.lista_programas', page=1) }}">
                        <i class="bi bi-collection-fill me-1"></i>{{ _('Planes') }}
                    </a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="{{ url_for('instructor_profile.pagina_instructor', page=1) }}">
                        <i class="bi bi-people-fill me-1"></i>{{ _('Instructores') }}
                    </a>
                </li>
                {% if is_blog_enabled() %}
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="{{ url_for('blog.blog') }}">
                        <i class="bi bi-chat-quote-fill me-1"></i>{{ _('Testimonios') }}
                    </a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link excel-tab" href="{{ url_for('home.panel') }}#contacto">
                        <i class="bi bi-clipboard-check-fill me-1"></i>{{ _('Testar Sección') }}
                    </a>
                </li>
            </ul>

            <!-- User actions -->
            <ul class="navbar-nav ms-auto excel-actions">
                {% if current_user.is_authenticated %}
                <!-- Search -->
                <li class="nav-item dropdown me-2">
                    <a class="nav-link excel-action-btn" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-search"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end excel-dropdown">
                        <form class="px-3 py-2" style="min-width: 300px">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="{{ _('Buscar cursos...') }}" />
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- User menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link excel-user-btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        <span class="d-none d-md-inline">{{ current_user.nombre }}</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end excel-dropdown">
                        <li>
                            <a class="dropdown-item" href="{{ url_for('home.panel') }}">
                                <i class="bi bi-speedometer2 me-2"></i>{{ _('Mi Panel') }}
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ url_for('user.perfil') }}">
                                <i class="bi bi-person me-2"></i>{{ _('Mi Perfil') }}
                            </a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item" href="{{ url_for('user.logout') }}">
                                <i class="bi bi-box-arrow-right me-2"></i>{{ _('Cerrar Sesión') }}
                            </a>
                        </li>
                    </ul>
                </li>
                {% else %}
                <li class="nav-item me-2">
                    <a class="btn excel-btn-outline" href="{{ url_for('user.inicio_sesion') }}"> {{ _('Iniciar Sesión') }} </a>
                </li>
                <li class="nav-item">
                    <a class="btn excel-btn-primary" href="{{ url_for('user.crear_cuenta') }}"> {{ _('Registrarse') }} </a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endmacro %}
