{% macro footer() -%} {% if config().enable_footer %}
<footer class="footer bg-dark text-white mt-auto py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5>{{ _("Acerca de") }}</h5>
                <p class="text-muted">{{ _("Sistema de gestión de aprendizaje moderno y completo.") }}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h5>{{ _("Enlaces Útiles") }}</h5>
                <ul class="list-unstyled">
                    <li>
                        <a
                            href="{{ url_for('static_pages.view_page', slug='about-us') }}"
                            class="text-muted text-decoration-none"
                            >{{ _("Sobre Nosotros") }}</a
                        >
                    </li>
                    <li>
                        <a
                            href="{{ url_for('static_pages.view_page', slug='privacy-policy') }}"
                            class="text-muted text-decoration-none"
                            >{{ _("Política de Privacidad") }}</a
                        >
                    </li>
                    <li>
                        <a href="{{ url_for('static_pages.contact') }}" class="text-muted text-decoration-none"
                            >{{ _("Contacto") }}</a
                        >
                    </li>
                </ul>
            </div>
            <div class="col-md-4 mb-3">
                <h5>{{ _("Síguenos") }}</h5>
                <div class="d-flex gap-3">
                    {% set site_config = config() %}
                    {% if site_config.social_facebook %}
                    <a href="{{ site_config.social_facebook }}" class="text-muted" aria-label="Facebook" target="_blank" rel="noopener noreferrer"><i class="bi bi-facebook"></i></a>
                    {% endif %}
                    {% if site_config.social_twitter %}
                    <a href="{{ site_config.social_twitter }}" class="text-muted" aria-label="Twitter" target="_blank" rel="noopener noreferrer"><i class="bi bi-twitter-x"></i></a>
                    {% endif %}
                    {% if site_config.social_linkedin %}
                    <a href="{{ site_config.social_linkedin }}" class="text-muted" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer"><i class="bi bi-linkedin"></i></a>
                    {% endif %}
                    {% if site_config.social_youtube %}
                    <a href="{{ site_config.social_youtube }}" class="text-muted" aria-label="YouTube" target="_blank" rel="noopener noreferrer"><i class="bi bi-youtube"></i></a>
                    {% endif %}
                    {% if site_config.social_instagram %}
                    <a href="{{ site_config.social_instagram }}" class="text-muted" aria-label="Instagram" target="_blank" rel="noopener noreferrer"><i class="bi bi-instagram"></i></a>
                    {% endif %}
                    {% if site_config.social_github %}
                    <a href="{{ site_config.social_github }}" class="text-muted" aria-label="GitHub" target="_blank" rel="noopener noreferrer"><i class="bi bi-github"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
        <hr class="bg-secondary" />
        <div class="row">
            <div class="col-12 text-center">
                <p class="text-muted mb-0">&copy; 2026 {{ config().titulo }}. {{ _("Todos los derechos reservados.") }}</p>
            </div>
        </div>
    </div>
</footer>
{% endif %} {%- endmacro %}
