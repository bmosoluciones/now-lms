{% set current_theme = current_theme() %}
<!doctype html>
{% set config = config() %}
<html lang="es" class="h-100">
    <head>
        {{ current_theme.headertags() }}
        <title>{{ _('Programas Disponibles') }}</title>

        {{ current_theme.local_style() }}

        <!-- Custom styles for this template -->
        <link href="{{ url_for('static', filename='css/sidebars.css') }}" rel="stylesheet" />

        <!-- Modern program explore page styles -->
        <style>
            .modern-program-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
                gap: 2rem;
                margin-bottom: 2rem;
            }

            .modern-program-card {
                background: white;
                border-radius: 20px;
                box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                transition: all 0.4s ease;
                position: relative;
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .modern-program-card:hover {
                transform: translateY(-12px);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
                border-color: var(--classic-primary);
            }

            .program-image-container {
                position: relative;
                width: 100%;
                height: 240px;
                overflow: hidden;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .program-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

            .modern-program-card:hover .program-image-container img {
                transform: scale(1.08);
            }

            .program-image-placeholder {
                display: flex;
                align-items: center;
                justify-content: center;
                height: 100%;
                color: white;
                font-weight: 700;
                font-size: 1.5rem;
                text-align: center;
                padding: 2rem;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                position: relative;
            }

            .program-image-placeholder::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")
                    repeat;
                opacity: 0.3;
            }

            .program-overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, rgba(102, 126, 234, 0.8), rgba(118, 75, 162, 0.8));
                opacity: 0;
                transition: opacity 0.3s ease;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .modern-program-card:hover .program-overlay {
                opacity: 1;
            }

            .program-overlay-icon {
                width: 48px;
                height: 48px;
                color: white;
                opacity: 0.9;
            }

            .program-card-body {
                padding: 2rem;
                position: relative;
            }

            .program-title {
                font-size: 1.5rem;
                font-weight: 800;
                color: var(--classic-text);
                margin-bottom: 1rem;
                line-height: 1.3;
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }

            .program-icon {
                width: 32px;
                height: 32px;
                background: linear-gradient(135deg, var(--classic-primary), var(--classic-secondary));
                border-radius: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: bold;
                font-size: 0.9rem;
            }

            .program-description {
                color: var(--classic-text-secondary);
                font-size: 1rem;
                line-height: 1.6;
                margin-bottom: 2rem;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .program-meta {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 2rem;
                padding: 1rem;
                background: var(--classic-light);
                border-radius: 12px;
            }

            .program-courses-count {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: var(--classic-text-secondary);
                font-weight: 600;
                font-size: 0.9rem;
            }

            .program-price {
                font-weight: 800;
                font-size: 1.25rem;
                color: var(--classic-primary);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .program-price.free {
                color: #22c55e;
            }

            .program-price-icon {
                width: 20px;
                height: 20px;
            }

            .program-action-btn {
                width: 100%;
                background: linear-gradient(135deg, var(--classic-primary), var(--classic-secondary));
                color: white;
                border: none;
                border-radius: 14px;
                padding: 16px 24px;
                font-weight: 700;
                text-decoration: none;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.75rem;
                transition: all 0.4s ease;
                box-shadow: 0 6px 20px rgba(46, 46, 46, 0.25);
                font-size: 1.05rem;
            }

            .program-action-btn:hover {
                background: linear-gradient(135deg, var(--classic-secondary), #1a1a1a);
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(46, 46, 46, 0.4);
                text-decoration: none;
            }

            .btn-icon {
                width: 20px;
                height: 20px;
                transition: transform 0.3s ease;
            }

            .program-action-btn:hover .btn-icon {
                transform: translateX(4px);
            }

            .modern-sidebar {
                background: white;
                border-radius: 20px;
                box-shadow: 0 10px 35px rgba(0, 0, 0, 0.08);
                padding: 2.5rem;
                position: sticky;
                top: 2rem;
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .sidebar-title {
                font-size: 1.6rem;
                font-weight: 800;
                color: var(--classic-text);
                margin-bottom: 2.5rem;
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            .sidebar-title-icon {
                width: 28px;
                height: 28px;
                background: linear-gradient(135deg, var(--classic-primary), var(--classic-secondary));
                border-radius: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
            }

            .filter-section {
                margin-bottom: 2.5rem;
            }

            .filter-section:last-child {
                margin-bottom: 0;
            }

            .filter-title {
                font-weight: 700;
                color: var(--classic-text);
                margin-bottom: 1.25rem;
                font-size: 1.15rem;
                display: flex;
                align-items: center;
                justify-content: space-between;
                cursor: pointer;
                padding: 1rem;
                border-radius: 12px;
                background: var(--classic-light);
                transition: all 0.3s ease;
                border: 2px solid transparent;
            }

            .filter-title:hover {
                color: var(--classic-primary);
                border-color: var(--classic-primary);
                background: white;
                box-shadow: 0 4px 15px rgba(46, 46, 46, 0.1);
            }

            .filter-options {
                padding-top: 1.25rem;
            }

            .filter-option {
                display: block;
                padding: 1rem 1.25rem;
                color: var(--classic-text-secondary);
                text-decoration: none;
                border-radius: 10px;
                margin-bottom: 0.75rem;
                transition: all 0.3s ease;
                font-weight: 600;
                border: 1px solid transparent;
                position: relative;
                overflow: hidden;
            }

            .filter-option::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(46, 46, 46, 0.1), transparent);
                transition: left 0.5s ease;
            }

            .filter-option:hover::before {
                left: 100%;
            }

            .filter-option:hover {
                background: var(--classic-primary);
                color: white;
                text-decoration: none;
                transform: translateX(8px);
                box-shadow: 0 4px 15px rgba(46, 46, 46, 0.2);
            }

            .pagination-modern {
                display: flex;
                justify-content: center;
                align-items: center;
                margin: 4rem 0;
                gap: 1.5rem;
                flex-wrap: wrap;
            }

            .pagination-info {
                background: white;
                padding: 1.25rem 2.5rem;
                border-radius: 16px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
                color: var(--classic-text-secondary);
                font-weight: 600;
                border: 1px solid rgba(0, 0, 0, 0.05);
                font-size: 1.05rem;
            }

            .pagination-nav a {
                background: linear-gradient(135deg, var(--classic-primary), var(--classic-secondary));
                color: white;
                padding: 1rem 2rem;
                border-radius: 16px;
                text-decoration: none;
                font-weight: 700;
                transition: all 0.4s ease;
                box-shadow: 0 6px 20px rgba(46, 46, 46, 0.25);
                display: flex;
                align-items: center;
                gap: 0.75rem;
                font-size: 1.05rem;
            }

            .pagination-nav a:hover {
                background: linear-gradient(135deg, var(--classic-secondary), #1a1a1a);
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(46, 46, 46, 0.4);
                text-decoration: none;
                color: white;
            }

            .page-header {
                margin-bottom: 3rem;
            }

            .breadcrumb-modern {
                background: white;
                border-radius: 16px;
                padding: 1.25rem 2rem;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
                margin-bottom: 2rem;
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .empty-state {
                text-align: center;
                padding: 4rem 2rem;
                background: white;
                border-radius: 20px;
                box-shadow: 0 10px 35px rgba(0, 0, 0, 0.08);
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .empty-state-icon {
                width: 80px;
                height: 80px;
                margin: 0 auto 2rem;
                color: var(--classic-text-secondary);
            }

            .empty-state h3 {
                color: var(--classic-text);
                font-weight: 700;
                margin-bottom: 1rem;
                font-size: 1.5rem;
            }

            .empty-state p {
                color: var(--classic-text-secondary);
                font-size: 1.1rem;
                line-height: 1.6;
            }

            @media (max-width: 768px) {
                .modern-program-grid {
                    grid-template-columns: 1fr;
                    gap: 1.5rem;
                }

                .modern-sidebar {
                    margin-top: 2rem;
                    position: static;
                    padding: 2rem;
                }

                .program-card-body {
                    padding: 1.5rem;
                }

                .pagination-modern {
                    flex-direction: column;
                    gap: 1rem;
                }

                .sidebar-title {
                    font-size: 1.4rem;
                }

                .program-title {
                    font-size: 1.3rem;
                }
            }
        </style>
    </head>

    <body>
        {{ current_theme.navbar() }}

        <main>
            <div class="container px-0 py-4">
                <div class="page-header">
                    <div class="breadcrumb-modern">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a class="text-reset text-decoration-none link-dark" href="/index">{{ _('Inicio') }}</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">{{ _('Programas disponibles') }}</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <!-- Pagination Top -->
                        <div class="pagination-modern">
                            <div class="pagination-info">
                                {{ cursos.total }} {{ _('programas encontrados') }} - {{ _('Página') }} {{ cursos.page }} {{
                                _('de') }} {{ cursos.pages }}
                            </div>
                            {% if cursos.has_next %}
                            <div class="pagination-nav">
                                <a href="{{ url_for('program.lista_programas', page=cursos.next_num) }}">
                                    {{ _('Siguiente') }}
                                    <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </a>
                            </div>
                            {% endif %}
                        </div>

                        <!-- Modern Program Grid -->
                        {% if cursos.items %}
                        <div class="modern-program-grid">
                            {% for curso in cursos.items %}
                            <div class="modern-program-card">
                                <div class="program-image-container">
                                    {% if curso.portada %}
                                    <img
                                        src="{{ url_for('static', filename='/files/public/images/' + curso.codigo + '/logo.jpg') }}"
                                        alt="{{ curso.nombre }}"
                                    />
                                    {% else %}
                                    <div class="program-image-placeholder">
                                        <div style="position: relative; z-index: 1">{{ curso.nombre }}</div>
                                    </div>
                                    {% endif %}

                                    <div class="program-overlay">
                                        <svg class="program-overlay-icon" viewBox="0 0 20 20" fill="currentColor">
                                            <path
                                                d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"
                                            />
                                        </svg>
                                    </div>
                                </div>

                                <div class="program-card-body">
                                    <h5 class="program-title">
                                        <div class="program-icon">{{ curso.nombre[0] }}</div>
                                        {{ curso.nombre }}
                                    </h5>

                                    <p class="program-description">
                                        {{ curso.descripcion if curso.descripcion else "Programa educativo completo diseñado
                                        para proporcionar un aprendizaje integral en el tema." }}
                                    </p>

                                    <div class="program-meta">
                                        <div class="program-courses-count">
                                            <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                                <path
                                                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"
                                                />
                                                <path
                                                    d="M3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762z"
                                                />
                                                <path
                                                    d="M9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0z"
                                                />
                                                <path d="M6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                                            </svg>
                                            {{ cuenta_cursos(curso.codigo) if cuenta_cursos else 'Múltiples' }} {{ _('cursos')
                                            }}
                                        </div>

                                        <div class="program-price {% if not curso.precio %}free{% endif %}">
                                            {% if curso.precio %}
                                            <svg class="program-price-icon" viewBox="0 0 20 20" fill="currentColor">
                                                <path
                                                    d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"
                                                />
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.51-1.31c-.562-.649-1.413-1.076-2.353-1.253V5z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            {{ curso.precio | float }} {{ config.moneda }} {% else %}
                                            <svg class="program-price-icon" viewBox="0 0 20 20" fill="currentColor">
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            {{ _('Gratis') }} {% endif %}
                                        </div>
                                    </div>

                                    <a
                                        href="{{ url_for('program.pagina_programa', codigo=curso.codigo) }}"
                                        class="program-action-btn"
                                    >
                                        <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                            <path
                                                fill-rule="evenodd"
                                                d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        {{ _('Ver Programa') }}
                                    </a>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% else %}
                        <!-- Empty State -->
                        <div class="empty-state">
                            <svg class="empty-state-icon" viewBox="0 0 20 20" fill="currentColor">
                                <path
                                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"
                                />
                            </svg>
                            <h3>{{ _('No hay programas disponibles') }}</h3>
                            <p>
                                {{ _('Actualmente no hay programas disponibles. Por favor, inténtelo más tarde o contacte al
                                administrador.') }}
                            </p>
                        </div>
                        {% endif %}

                        <!-- Pagination Bottom -->
                        {% if cursos.items %}
                        <div class="pagination-modern">
                            {% if cursos.has_prev %}
                            <div class="pagination-nav">
                                <a href="{{ url_for('program.lista_programas', page=cursos.prev_num) }}">
                                    <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            fill-rule="evenodd"
                                            d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    {{ _('Anterior') }}
                                </a>
                            </div>
                            {% endif %}

                            <div class="pagination-info">
                                {{ _('Página') }} {{ cursos.page }} {{ _('de') }} {{ cursos.pages }} - {{ cursos.total }} {{
                                _('programas encontrados') }}
                            </div>

                            {% if cursos.has_next %}
                            <div class="pagination-nav">
                                <a href="{{ url_for('program.lista_programas', page=cursos.next_num) }}">
                                    {{ _('Siguiente') }}
                                    <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>

                    <!-- Modern Sidebar -->
                    <div class="col-lg-4">
                        <div class="modern-sidebar">
                            <h5 class="sidebar-title">
                                <div class="sidebar-title-icon">
                                    <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
                                        />
                                    </svg>
                                </div>
                                {{ _('Filtrar Programas') }}
                            </h5>

                            <!-- Categories Filter -->
                            <div class="filter-section">
                                <div
                                    class="filter-title"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#categories-filter"
                                    aria-expanded="true"
                                >
                                    {{ _('Categorías') }}
                                    <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
